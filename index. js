const express = require('express');
const app = express();

// ضبط المنفذ من متغير البيئة أو الافتراضي إلى 3000
const port = process.env.PORT || 3000;

// إعداد المسار الرئيسي
app.get('/', (req, res) => {
  res.send('Hello, Render! The server is running.');
});

// بدء الخادم
app.listen(port, () => {
  console.log(`Server is running on port ${port}`);
});
