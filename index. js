const express = require('express');
const app = express();

// ضبط المنفذ من متغير البيئة أو الافتراضي إلى 3000
const port = process.env.PORT || 3000;

// إعداد المسار الرئيسي
app.get('/', (req, res) => {
  res.send('Hello, Render! The server is running.');
});

// بدء الخادم
app.listen(port, () => {
  console.log(`Server is running on port ${port}`);
});

const { Pool } = require('pg');

// استخدم DATABASE_URL من المتغيرات البيئية
const pool = new Pool({
  connectionString: process.env.DATABASE_URL,
  ssl: {
    rejectUnauthorized: false // لتفادي مشاكل الشهادات SSL عند الاتصال بقاعدة بيانات سحابية
  }
});

pool.connect((err, client, release) => {
  if (err) {
    return console.error('Error acquiring client', err.stack);
  }
  client.query('SELECT NOW()', (err, result) => {
    release();
    if (err) {
      return console.error('Error executing query', err.stack);
    }
    console.log(result.rows);
  });
});

